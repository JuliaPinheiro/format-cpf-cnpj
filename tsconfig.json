{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.tsx"]
}
